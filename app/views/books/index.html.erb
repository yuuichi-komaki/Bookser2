 
 <div class="container">
 <div class="row">
  
 <div class="col-md-3">
<%= render 'users/userinfo', user: @user %>
<%= render 'books/newbook', book: @book %>
</div>

 <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
     
      <table class='table'>

      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
      <% @books.each do |book| %>
      <tr>
      <td><%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %></td>
      <% end %>

      <td><%=link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
      </table>
    </div>

</div>
</div>
</div>
